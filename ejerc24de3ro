package ejercicio24de3ro;

import java.util.Scanner;

public class Ejerc24_100seguidores {
	public static void main(String[] args) throws InterruptedException {

		Scanner ingreso = new Scanner(System.in);
		int i = 1;

		while (i < 101) {
			System.out.println(i);
			i++;
		}
		System.out.println("llgaste a los 100 seguidores!!");
		try {
			// Espera 20 ms antes de incrementar nuevamente
			Thread.sleep(20);
		} catch (InterruptedException e) {
			System.out.println("Se produjo un error en la espera: " + e.getMessage());

		}
	}
}
//no c como usar el sleep 
